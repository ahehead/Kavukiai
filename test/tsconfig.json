{
  "include": ["**/*.*", "../src/renderer/src/**/*", "../src/main/**/*"],
  "compilerOptions": {
    "baseUrl": "..",
    "paths": {
      "renderer/*": ["src/renderer/*"],
      "main/*": ["src/main/*"],
      "shared/*": ["src/shared/*"],
      "@nodes/*": ["src/nodes/*"],
      "nodes/*": ["src/nodes/*"]
    },
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["vitest/globals", "vite/client"],
    "jsx": "react"
  }
}
